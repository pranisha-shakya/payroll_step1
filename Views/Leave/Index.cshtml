@model IEnumerable<payroll_step1.Models.Leave>

<h2>Leave Requests</h2>
<a asp-action="Create" class="btn btn-primary">Apply Leave</a>
<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Type</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Employee.Name</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.LeaveType</td>
                <td>@item.Status</td>
                <td>
                    @if (item.Status == "Pending")
                    {
                        <a asp-action="Approve" asp-route-id="@item.LeaveID" class="btn btn-success">Approve</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
